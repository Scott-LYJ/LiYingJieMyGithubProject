        <!--SELECT * FROM auth_permission where-->

        <!--role_id in-->
                <!--<foreach collection="roleIds" item="item" index="index" open="(" separator="," close=")">-->
                    <!--#{item}-->
                <!--</foreach>-->


        <!--ORDER BY id DESC-->

    <!--</select>-->
    <update id="update" parameterType="com.dcits.scott.admin.pojo.AuthPermission">
        UPDATE auth_permission

        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="resId != null">
                res_id = #{resId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            udt = now()
        </set>

        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        DELETE FROM auth_permission WHERE id = #{id}
    </delete>

    <delete id="deleteByRoleId" parameterType="Integer">
        DELETE FROM auth_permission WHERE role_id = #{roleId}
    </delete>

    <insert id="insert" parameterType="com.dcits.scott.admin.pojo.AuthPermission">
        INSERT INTO auth_permission (res_id, role_id, cdt, udt) VALUES (#{resId}, #{roleId}, now(), now())
    </insert>

    <insert id="insertList" parameterType="ArrayList">
        INSERT INTO auth_permission (res_id, role_id, cdt, udt) VALUES
        <foreach collection="list" item="permission" index="index" separator=",">
            (#{permission.resId}, #{permission.roleId}, now(), now())
        </foreach>
    </insert>

</mapper>